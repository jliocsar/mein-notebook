{
  "name": "@jliocsar/notiz-cli",
  "version": "0.1.4",
  "main": "notiz.ts",
  "type": "module",
  "bin": {
    "notiz": "./notiz.ts",
    "notiz.setup": "./setup.ts"
  },
  "scripts": {
    "start": "bun run --bun index.civet",
    "transpile": "civet -c *.civet lib/*.civet lib/db/*.civet && sed -i 's/.civet/.civet.tsx/g' *.tsx lib/*.tsx lib/db/*.tsx",
    "db:studio": "drizzle-kit studio --port 3333",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:transpile": "civet < lib/db/schema.civet > lib/db/schema.ts",
    "db:migrate": "bun db:transpile && bun run --bun lib/db/migrate.civet",
    "db:seed": "bun run --bun db/seed.civet",
    "postinstall": "bun transpile && bun db:transpile"
  },
  "devDependencies": {
    "@types/yargs": "latest",
    "bun-types": "latest",
    "drizzle-kit": "latest"
  },
  "peerDependencies": {
    "typescript": "latest"
  },
  "dependencies": {
    "@danielx/civet": "latest",
    "@libsql/client": "latest",
    "@topcli/spinner": "latest",
    "cli-markdown": "latest",
    "colorette": "latest",
    "cryptify": "latest",
    "dayjs": "latest",
    "drizzle-orm": "latest",
    "yargs": "latest"
  }
}
